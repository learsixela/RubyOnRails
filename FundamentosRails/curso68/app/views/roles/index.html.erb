<h1>Roles</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @rols.each do |roles| %>
      <tr>
        <td><%= roles.id %></td>
        <td><%= roles.nombre %></td>
        <td><a href="/usuarios/1">Mostrar</a></td>
        <td><%=link_to "Mostrar", controller: "roles", action: "show", id: @roles%></td>
        # => <a href="/profiles/show/1">Profile</a>
        <td><%= link_to 'Mostrar', roles %></td>
        <td><%= link_to 'Editar', edit_rol_path(roles) %></td>
        <td><%= link_to 'Eliminar', roles, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
